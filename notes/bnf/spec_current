<program> ::= <statement>

<statement> ::= <declaration> | <assignment> | <exit>

<declaration> ::= "word" <identifier> | "word" <assignment>

<assignment> ::= <identifier> ":" <expression>

<exit> ::= "exit" <expression>

<expression> ::= <byte> | <binary> | <group>

<group> ::= "(" <expression> ")"

<unary> ::= "!" <expression>

<binary> ::= <expression> <binary-operator> <expression>

<binary-operator> ::= "+" | "-" | "*" | "=" | "<" | ">"

<byte> ::= <number>*

<number> ::= "0" | "1" | "2" | ...
 
<identifier> ::= <letter> <character>*

<character> ::= <letter> | <number>

<letter> ::= "a" | "b" | "c" | ... | "A" | "B" | "C" | ...

